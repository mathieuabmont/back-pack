          </div>
        <% end %>
        <% if policy(activity).destroy? %>
          <div class="circle-icon">
             <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'
             .html_safe, activity_path(activity),
             method: :delete, data: {confirm: "êtes-vous sûr ?"} %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="trip-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path activity.photo, height: 300, width: 400, crop: :fill %>')">
