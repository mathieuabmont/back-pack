<div class="scrollable full-height">
  <% if current_user %>
    <%= simple_form_for @activity do |f| %>
      <%= f.input :title, placeholder: "Mon incroyable roadtrip" %>
      <%= f.input :url, placeholder: "Article de blog, site de restaurant ... " %>
      <%= f.submit "Ajouter"%>
    <% end %>
  <% end %>
</div>

<%= link_to 'Supprimer', activity_path(@activity), method: :delete, class: 'btn' %>

<%= render 'navbutton-activity', step: @step %>

