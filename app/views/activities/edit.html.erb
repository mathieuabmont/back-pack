<div class="scrollable full-height">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="form-login">
          <% if current_user %>
            <%= simple_form_for @activity do |f| %>
              <%= f.input :title, placeholder: "Mon incroyable roadtrip" %>
              <%= f.input :url, placeholder: "Article de blog, site de restaurant ... " %>
              <%= f.button :submit, "Modifier", class: "btn btn-bleu" %>
            <% end %>
          <% end %>
          <%= link_to 'Supprimer', activity_path(@activity), method: :delete, class: 'btn btn-bleu' %>
        </div>
      </div>
    </div>
  </div>
</div>


<%= render 'navbutton-activity', step: @step %>

