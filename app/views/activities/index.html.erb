<div class="scrollable full-height">
  <div class="list-trips">
    <h2>Mes activités</h2>
    <% @activities.each do |activity| %>
      <%= render 'card-activity', activity: activity %>
    <% end %>
  </div>
  <div class="center-btn addtrip">
    <% if policy(Activity.new(step: @step)).create? %>
      <%= link_to 'Ajouter une activité', new_step_activity_path(@step), class:'btn btn-bleu-so' %>
    <% end %>
  </div>
</div>
<%= render 'navbutton-activity', step: @step %>
