<div class="footer">

    <div class="navbtn" >
      <% if @transport %>
        <%= link_to transport_path(step.transport) do %>
          <%= image_tag 'ticket_icon.png', class: :navbtn, id: :ticket %>
        <% end %>
      <% else %>
        <%= link_to new_step_transport_path(step) do %>
          <%= image_tag 'ticket_icon.png', class: :navbtn, id: :ticket %>
        <% end %>
      <% end %>
    </div>

    <div class="navbtn">
      <%= image_tag 'accommodation_icon_grey.png', class: :navbtn, id: :accomodation %>
    </div>

    <div class="navbtn">
      <% if @step.activities.blank? %>
        <%= link_to new_step_activity_path(step) do %>
          <%= image_tag 'activity_icon.png', class: :navbtn, id: :activity %>
        <% end %>
      <% else %>
        <%= link_to step_activities_path(step) do %>
          <%= image_tag 'activity_icon.png', class: :navbtn, id: :activity %>
        <% end %>
      <% end %>
    </div>

    <div class="navbtn">
      <%= link_to trip_steps_path(step.trip) do %>
        <%= image_tag 'index_steps.png', class: :navbtn, id: :index_steps %>
      <% end %>
    </div>

</div>
