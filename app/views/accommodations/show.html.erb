<div class="scrollable full-height">
  <% if @accommodation.photo.nil? %>
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path accommodation.jpg, height: 300, width: 400, crop: :fill %>');">
  <% elsif @accommodation.photo == "0" %>
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path accommodation.jpg, height: 300, width: 400, crop: :fill %>');">
  <% else %>
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path @accommodation.photo, height: 300, width: 400, crop: :fill %>');">
  <% end %>
</div>
  <div class="banner-content">
    <ul>
      <li><%= @accommodation.category %></li>
      <li><%= @accommodation.name %></li>
      <li><%= @accommodation.location %></li>
      <li><%= @accommodation.arrival_date %></li>
      <li><%= @accommodation.departure_date %></li>
    </ul>
  </div>
  <% if policy(@accommodation).update? %>
    <%= link_to 'Modifier', edit_accommodation_path(@accommodation), class: 'btn btn-bleu' %>
  <% end %>
  <% if policy(@accommodation).destroy? %>
    <%= link_to 'Supprimer', accommodation_path(@accommodation), method: :delete, class: 'btn btn-bleu' %>
  <% end %>
</div>


<%= render 'navbutton-accommodation', step: @step %>
