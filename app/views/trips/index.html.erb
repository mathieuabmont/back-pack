<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

        <h2>My trips </h2>
        <% @trips.each do |trip| %>
          <div class="col-xs-12 col-sm-4">
            <%= render 'card-trips', trip: trip %>
          </div>
        <% end %>


        <%= link_to "Ajouter un voyage", new_trip_path, class: 'btn btn-bleu' %>

        <div class="form-login">
          <% if current_user %>
          <p>Vous avez un code invitation pour rejoindre vos amis ?</p>
            <%= simple_form_for :invitation, url: join_trips_path do |f| %>
              <%= f.input :code, placeholder: "code invitation" %>
              <%= f.button :submit, "Ajouter", class: "btn-bleu" %>
            <% end %>
          <% end %>

        </div>

    </div>
  </div>
</div>
