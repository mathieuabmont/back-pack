<div class="scrollable full-height">
  <h2 class="page-title"> Votre prochain d√©placement </h2>
  <ul>
    <li class="transport-date"><%= @transport.departure_date.strftime("%m/%d") %> </li>
  </ul>
  <div class="content-transport">
    <ul class="content-transport-left">
      <li class="transparency-title">From</li>

      <li class="main-info"><%= @transport.departure_time.nil? ? "N/A" : @transport.departure_time %></li>

      <li class="secondary-info"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= @transport.departure_location %></li>
    </ul>
  <!-- <div id="trait-destination"></div> -->
    <ul class="content-transport-right">
      <li class="transparency-title" >To</li>
      <li class="main-info"><%= @transport.arrival_time %></li>
      <li class="secondary-info"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= @transport.arrival_location %></li>
    </ul>
  </div>

  <div class="center-btn">
    <% if @transport.ticket.nil? %>
      <%= link_to 'MON BILLET', new_transport_ticket_path(@transport), class: 'btn btn-bleu-lg' %>
    <% else %>
      <%= link_to 'MON BILLET', transport_ticket_path(@transport, @ticket), class: 'btn btn-bleu-lg' %>
    <% end %>
  </div>

  <% if policy(@transport).update? %>
    <%= link_to 'Modifier', edit_transport_path(@transport), class: 'btn btn-bleu' %>
  <% end %>
  <% if policy(@transport).update? %>
    <%= link_to 'Supprimer', transport_path(@transport), method: :delete, class: 'btn btn-bleu' %>
  <% end %>

</div>


<%= render 'navbutton-transport', step: @step %>
